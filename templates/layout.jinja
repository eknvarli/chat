{% load static %}
<head>
    <title>{% block title %}{% endblock %} | Retto</title>
    <link rel="stylesheet" href="{% static 'styles/global.css' %}">
    <style>
        .room-list {
            background-color: rgba(0, 0, 0, 0.650);
            padding: 20px;
            border-radius: 10px;
        }

        .room-messages {
            background-color: rgba(0, 0, 0, 0.650);
            padding: 20px;
            border-radius: 10px 0px 0px 0px;
        }

        .room-panel {
            background-color: rgba(0, 0, 0, 0.750);
            padding: 20px;
            border-radius: 0px 10px 0px 0px;
        }

        .send-message-area {
            background-color: rgba(0, 0, 0, 0.650);
        }

        .blank-area {
            background-color: rgba(0, 0, 0, 0.750);
            padding: 25px;
        }

        .message-item {
            background-color: rgba(255, 255, 255, 0.063);
            padding: 15px;
            padding-top: 20px;
            padding-bottom: 20px;
            border-radius: 20px;
            margin-bottom: 10px;
        }

        #room-link {
            text-decoration: none !important;
            color: #c5c5c5 !important;
        }

        .page-link {
            background-color: rgba(255, 255, 255, 0.116);
            border-color: rgba(255, 255, 255, 0.116);
            color: #c5c5c5;
        }

        .page-link:hover {
            background-color: rgba(255, 255, 255, 0.116);
            border-color: rgba(255, 255, 255, 0.116);
            color: #c5c5c5;
        }
    </style>
</head>

<body>
{% include 'components/navbar.jinja' %}

<div class="main container">
{% block content %}
{% endblock %}
</div>
</body>

